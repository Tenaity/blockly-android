<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:kongqw="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/control_bg"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:id="@+id/to_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:paddingRight="18dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Theo dõi  循迹-->
                    <TextView
                        android:id="@+id/follow"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/select_xuji_bg"
                        android:gravity="center"
                        android:text="Theo dõi"
                        android:textSize="17sp"
                        android:textColor="@drawable/select_xuji_color" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/shu" />

                    <!--Điều khiển từ xa  遥控-->
                    <TextView
                        android:id="@+id/control"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/select_control_bg"
                        android:gravity="center"
                        android:text="ĐKTX"
                        android:textSize="17sp"
                        android:textColor="@drawable/select_control_color" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@mipmap/heng" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--Tránh né chướng ngại vật  避障-->
                    <TextView
                        android:id="@+id/hide"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/select_hide_bg"
                        android:gravity="center"
                        android:text="Tránh"
                        android:textSize="17sp"
                        android:textColor="@drawable/select_hide_color" />

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@mipmap/shu" />

                    <!--  cần điều khiển 摇杆-->
                    <TextView
                        android:id="@+id/prevent_down"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/select_prevent_bg"
                        android:gravity="center"
                        android:text="Cần đk"
                        android:textSize="17sp"
                        android:textColor="@drawable/select_prevent_color" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/start_and_pause"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/select_start_pause_yellow" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:paddingLeft="28dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img"
                android:layout_width="270dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:scaleType="fitXY" />

            <!--Tránh chướng ngại vật -->
            <TextView
                android:id="@+id/introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:text="避障"
                android:textSize="17sp"
                android:visibility="gone"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/layout_control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/go"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/select_up_bg" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/left"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/select_left_bg" />

                    <ImageView
                        android:id="@+id/stop"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/select_stop_bg"
                        android:text="停" />

                    <ImageView
                        android:id="@+id/right"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:background="@drawable/select_right_bg"
                        android:text="右" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:background="@drawable/select_down_bg"
                    android:text="后" />

            </LinearLayout>
            <com.kongqw.rockerlibrary.view.RockerView
                android:id="@+id/rockerView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:visibility="gone"
                kongqw:areaBackground="@color/white"
                kongqw:rockerBackground="@color/green"
                kongqw:rockerRadius="30dp" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>